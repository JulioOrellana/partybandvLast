  body
    .container
      div.modal.hide#myModal
        .modal-header
            button(type="button", class="close", data-dismiss="modal") x
            h3 Resumen del pedido
        .modal-body            
            .row-fluid
              .span4.drink-names.resumeheader
                p Productos
              .span4.drink-quantity.resumeheader
                p Cantidad
              .span4.drink-values.resumeheader
                p Valor
            hr
            .row-fluid
              .span4.drink-names.data
                hr
              .span4.drink-quantity.data
                hr
              .span4.drink-values.data
                hr
            hr
            .row-fluid
              .span8.confirm.resumeheader
                p Confirmar pedido
              .span4.total.resumeheader
                p Total
            hr
            .row-fluid
              .span8.result-data
                .carro-vacio
                  p Canasta de compras vacía
                .carro-con-productos
                  p Acerque la pulser al lector:
                  input#lectorpulsera(type='text',name='numpulsera',maxlength='10')
                .result-data-user
                  p.pulsera-no-encontrada ¡Pulsera no encontrada!
                  .form-confirmar-compra-div
                    form(id='form-confirmar-compra',method='post')
                      .form-nombre-usuario
                      .form-saldo-usuario
                      .form-saldo-insuficiente 
                        p(style='color:red')¡Saldo insuficiente!
                      input#pin-pulsera(type='password', maxlength='4',id='pinpulsera')br
                      input#boton-confirmar(type='button', class='btn btn-success',value='Confirmar')
                      &nbsp;
                      input(type='reset',class='btn btn-danger botonReset',value='Borrar Datos')                   

              .span4.drink-result
              
        .modal-footer

      .scroll-down
        img(src='/img/scroll_btn_dred.svg', width='50px')
      
      .masthead
        ul.nav.nav-pills.pull-right
          li
            a(href='/') Home
          li.active
            a(href='/Barra') Barra
          li
            a(href='#') Administración
          li
            a(href='/signin') Usuarios
        h3.muted PartyBand
      .jumbotron
        h1 ¡Barra del Bar!
        p.lead
          | Aquí encontrarás todos los bebestibles del bar.
        <!--a.btn.btn-large.btn-success(href='#') Get started today-->
        - let currentProd = 0
        - for (let row = 0; row <= data.length / 3; row++)
          hr
          .row-fluid
            - for (let prod = 1; prod <= 3; prod++)
              - if (currentProd < data.length)
                .span4
                  img(src='/img/drinks/#{data[currentProd].nombre}.png', width='100')
                  p #{data[currentProd].nombre} 
                  p $#{data[currentProd].valor}
                  p.desc 
                    i "#{data[currentProd].descripcion}"
                  p #{data[currentProd].categoria}
                  select(name='dropdown')
                    - for(let j = 0; j <= 5; j++)
                      option(value='#{j}+#{data[currentProd].nombre}+#{data[currentProd].valor}+#{data[currentProd].codp}') #{j}
                - currentProd++
        
        hr
        a.btn.btn-large.btn-success#fixedButton(href='/barra') Checkout
      hr
      .footer
        p © PartyBand 2016
  include ../partials/scripts
